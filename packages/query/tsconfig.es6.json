{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build/esm",
    "module": "ES6",
    "target": "ES2017",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/es6.tsbuildinfo",
    "removeComments": false,
    "plugins": [
      {
        "transform": "@effect-ts/tracing-plugin",
        "moduleMap": {
          "^src/(.*)": "(@effect-ts/query): _src/$1"
        }
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["test", "node_modules"]
}
